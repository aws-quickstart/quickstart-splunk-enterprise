                        "Fn::GetAtt": [
                            "VPCStack",
                            "Outputs.VPCCIDR"
                        ]
                    },
                    "PublicSubnet1ID": {
                        "Fn::GetAtt": [
                            "VPCStack",
                            "Outputs.PublicSubnet1ID"
                        ]
                    },
                    "PublicSubnet2ID": {
                        "Fn::GetAtt": [
                            "VPCStack",
                            "Outputs.PublicSubnet2ID"
                        ]
                    },
                    "InstanceType": {
                        "Ref": "InstanceType"
                    },
                    "SplunkAdminPassword": {
                        "Ref": "SplunkAdminPassword"
                    },
                    "SplunkSecret": {
                        "Ref": "SplunkSecret"
                    },
                    "SplunkLicenseBucket": {
                        "Ref": "SplunkLicenseBucket"
                    },
                    "SplunkLicensePath": {
                        "Ref": "SplunkLicensePath"
                    },
